  <h3 class="mt-3">Blog Details</h3>
  <p><%=blog.title ?? 'd' %></p>
  <p><%=blog.snippet ?? 'd' %></p>
  <button class="btn btn-danger del" data-doc="<%=blog._id%>">Delete</button>
  <script>
    const button = document.querySelector('button.del')
    button.addEventListener('click',(e)=>{
      const url = `/blogs/${button.dataset.doc}`;
      fetch(url,{
        method: 'DELETE',
      })
      .then((response)=>response.json())
      .then((data)=> window.location.href=data.redirect)
      .catch((err)=>{
         console.log(err);
      })
    }); 
  </script>